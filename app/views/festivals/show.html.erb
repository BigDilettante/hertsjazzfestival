<% page_title "#{@festival.year} schedule#{@festival.is_current? ? ' and tickets' : ''}" %>
<% if @festival.meta_description.present? %>
	<% meta_tag :description, @festival.meta_description.truncate(160).html_safe %>
<% else %>
	<% meta_tag :description, "Herts Jazz Festival #{@festival.year} schedule#{@festival.is_current? ? ' and tickets' : ''}" %>
<% end %>


<div class="container" id="festivals">
  <div class="mobile_show col-12 text-center">
    <p class="mb-1"><small><b>Call the box office:</b> 01279 710200</small></p>
    <p class="mb-4">
      <a class="btn btn-primary" href="mailto:info@hertsjazz.co.uk">Email us at info@hertsjazz.co.uk</a>
    </p>
  </div>

	<% if @festival.is_current %>
		<% if @festival.gigs.any? %>
			<p>Welcome to the 9th Herts Jazz Festival in Bishop's Stortford. For those of you who have been to previous festivals, the format is pretty similar. This year we are dedicating the Friday evening to the Herts Jazz Film Festival, followed by Gareth Williams Trio playing in the bar.</p>
			<p>Please note that there is separate ticketing for Friday because we have limited capacity for that evening. This is going to be a real jazz-lover's festival so please book soon and help us make it a real success!</p>
			<p class="mb-4">See you there!<br />
				Clark</p>
			<ul class="nav nav-pills nav-justified">
			  <li class="nav-item">
			    <a class="nav-link active" href="#lineup" data-toggle="tab" role="tab">Schedule</a>
			  </li>
			  <li class="nav-item">
			    <a class="nav-link" href="#tickets" data-toggle="tab" role="tab">Tickets</a>
			  </li>
			</ul>
		<% else %>
			<p>The 9th Herts Jazz Festival will take place at the Rhodes Arts Complex in Bishop's Stortford on 27-29 September. Details coming soon!</p>
		<% end %>
	<% else %>
		<h2 class="main_heading mb-5"><%= @festival.year %> Herts Jazz festival</h2>
	<% end %>

	<div class="tab-content" id="myTabContent">
	  <div class="tab-pane fade show active" id="lineup" role="tabpanel" aria-labelledby="lineup-tab">
			<div class="row">
			<% @festival.reverse_days.each do |day| %>
				<% if day.gig_list.any? %>
						<% day.gig_list.each do |gig| %>
							<div class="col-12 col-lg-3 col-md-4 gig">
								<%= link_to(image_tag(gig.image.url(:small)), gig_path(gig)) if gig.image.present? %>
								<h5><%= link_to gig.act, gig_path(gig) %></h5>
								<h6><%= day.date.strftime("%A %B %e") %> <br /> <%= "#{gig.starts.strftime("%l:%M -")}#{gig.ends.strftime("%l:%M%P")}".html_safe %></h6>
								<%= simple_format gig.description.truncate_words(45) %>
								<div class='buttons'>
									<a href="<%= gig_path(gig) %>" class='btn btn-primary btn-block'>More details ></a>
									<% if gig.is_bookable? %>
										<a href='<%= gig.booking_url %>' class='btn btn-success btn-block' target="_blank">Book now</a>
									<% end %>
								</div>
							</div>
						<% end %>
				<% end %>
			<% end %>
			</div>

			<% if @festival.gallery_url.length > 0 %>
				<p><%= link_to "Click here to see photos of the #{@festival.year} festival", @festival.gallery_url, target: :blank %></p>
			<% end %>

			<% if !@festival.is_current && @festival.films.any? %>
				<p><%= link_to "Click here to see details of the #{@festival.year} film festival", films_path(festival: @festival.id) %></p>
			<% end %>
		</div>


	<% if @festival.is_current %>
		<div class="tab-pane fade show" id="tickets" role="tabpanel" aria-labelledby="tickets-tab">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Type</th>
						<th scope="col">Standard</th>
						<th scope="col">Members</th>
						<th scope="col">Students</th>
						<th scope="col">&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th scope="row">Weekend<sup>*</sup></th>
						<td><%= gig_price(@festival.weekend_standard_price) %></td>
						<td><%= gig_price(@festival.weekend_members_price) %></td>
						<td><%= gig_price(@festival.weekend_students_price) %></td>
						<td>
							<% if @festival.is_in_early_bird_period? %>
								&nbsp;
							<% else %>
								<%= link_to "Book now", @festival.booking_url, target: :blank %>
							<% end %>
						</td>
					</tr>
					<% if @festival.is_in_early_bird_period? %>
						<tr>
							<th scope="row">Early-bird<sup>**</sup></th>
							<td><%= gig_price(@festival.earlybird_standard_price) %></td>
							<td><%= gig_price(@festival.earlybird_members_price) %></td>
							<td><%= gig_price(@festival.earlybird_students_price) %></td>
							<td><%= link_to "Book now", @festival.booking_url, target: :blank %></td>
						</tr>
					<% end %>
					<% @festival.days.each do |day| %>
						<% unless day.booking_url.nil? %>
							<% day_name = day.date.strftime("%A").capitalize %>
							<tr>
								<th scope="row"><%= day_name %><sup>*</sup></th>
								<td><%= gig_price(day.day_standard_price) %></td>
								<td><%= gig_price(day.day_members_price) %></td>
								<td><%= gig_price(day.day_students_price) %></td>
								<td>
									<% if @festival.is_in_early_bird_period? %>
										&nbsp;
									<% else %>
										<%= link_to "Book now", day.booking_url, target: :blank %>
									<% end %>
								</td>
							</tr>
							<% if @festival.is_in_early_bird_period? %>
								<tr>
									<th scope="row"><%= day_name %> early-bird<sup>**</sup></th>
									<td><%= gig_price(day.earlybird_standard_price) %></td>
									<td><%= gig_price(day.earlybird_members_price) %></td>
									<td><%= gig_price(day.earlybird_students_price) %></td>
									<td><%= link_to "Book now", day.booking_url, target: :blank %></td>
								</tr>
							<% end %>
						<% end %>
					<% end %>
					<tr>
						<th scope="row">Individual gigs</th>
						<td colspan="4">
							<% if @festival.is_in_early_bird_period? %>
								Gig tickets go on sale <%= @festival.early_bird_cutoff_date.strftime("%B %e") %>.
							<% end %>
							<a href="/">View the schedule to see individual prices</a></td>
					</tr>
					<caption>
						* Weekend and Day tickets do not include admission to the Herts Jazz Film Festival
						<% if @festival.is_in_early_bird_period? %>
							<br />** Early-bird tickets available until midnight <%= @festival.early_bird_cutoff_eve.strftime("%B %e") %>
						<% end %>
					</caption>
				</tbody>
			</table>
		</div>
	<% end %>
</div>